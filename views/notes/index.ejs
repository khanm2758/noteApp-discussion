<h2 class="mb-4 fw-bold text-warning">ðŸ“‹ Your Notes</h2>
<% if(items.length > 0){     %>
<table class="table table-hover shadow-sm">
  <thead>
    <tr>
      <th>No:</th>
      <th>Title</th>
      <th>Status</th>
      <th class="text-end">Actions</th>
    </tr>
  </thead>
  <tbody>
    <% items.forEach((item, i)=>{     %>
      <tr>
        <td><%= i + 1  %></td>
        <td><%= item.title %></td>
        <td>
          <span class="badge <%= item.done ? 'bg-success' : 'bg-warning text-dark' %>">
            <%= item.done ? 'Done' : "Pending"  %>
          </span>
        </td>
        <td class="text-end">
          <a href="/notes/<%= item._id  %>/view" class="btn btn-info btn-sm me-1">View</a>
          <form action="/notes/<%= item._id %>/delete" method="POST" class="d-inline">
            <button type="submit" class="btn btn-danger btn-sm">Delete</button>
          </form>
        </td>
      </tr>
    <% }) %>
  </tbody>
</table>
<% }else{   %>
  <h3>There is no notes created yet. Please create one!</h3>
<% }%>

<a href="/notes/create" class="btn btn-info btn-sm me-1">Create new Note</a>